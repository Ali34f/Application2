<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <!-- Welcome Image -->
        <ImageView
            android:id="@+id/welcomeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_image_work"
            android:contentDescription="@string/welcome"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome WorkConnect"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            tools:ignore="HardcodedText" />

        <!-- Buttons Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Admin Button -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="54dp"
                android:background="@drawable/rounded_edit_button"
                android:layout_margin="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/adminButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_btn"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- Employee Button -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="54dp"
                android:background="@drawable/rounded_blue_button"
                android:layout_margin="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/employeeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employee_btn"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- Sign-In Prompt -->
        <TextView
            android:id="@+id/signInPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/please_sign_in"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>
</RelativeLayout>
