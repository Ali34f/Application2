<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        tools:ignore="UselessParent">

        <!-- Illustration Image -->
        <ImageView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:src="@drawable/man"
            android:contentDescription="@string/login_illustration"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- App Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hradminpro"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- New Password Label  -->
        <TextView
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="4dp" />

        <!-- Username Input Field -->
        <EditText
            android:id="@+id/eNewpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints="newpassword"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/enter_new_password"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck" />

        <!-- Password Label (aligned to left) -->
        <TextView
            android:id="@+id/confirm_password_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="4dp" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/etPassword_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:autofillHints="confirmpassword"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/confirm_password"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="TextContrastCheck,TextFields,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />



        <!-- Save Changes Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFA500"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="@string/save_changes"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="VisualLintButtonSize,TextContrastCheck" />


    </LinearLayout>

</RelativeLayout>
