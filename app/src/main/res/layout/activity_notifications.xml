<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".NotificationsActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="vertical"
        android:background="#E8E8E8"
        android:padding="16dp">

        <!-- HRAdminPro Title -->
        <TextView
            android:id="@+id/hrAdminProTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hradminpro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/headerSection"
        android:contentDescription="@string/back"
        app:tint="#8A2A00"/>

    <!-- Notifications Title -->
    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notificationTitle"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/headerSection"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="35dp"/>

    <!-- Notifications List -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notificationTitle"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp"
                android:layout_marginBottom="25dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconReminder"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_event"
                    android:contentDescription="@string/icon_reminder"
                    android:layout_marginEnd="16dp"
                    app:tint="#8A2A00"/>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/notificationTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reminder_event"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationMessage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_text"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_time"
                        android:textSize="12sp"
                        android:textColor="#4D4D4D" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notification Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconSecurity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_security"
                    android:contentDescription="@string/icon_security"
                    android:layout_marginEnd="16dp"
                    app:tint="#8A2A00"/>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/notificationTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/security_notice"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationMessage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications_text2"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_time2"
                        android:textSize="12sp"
                        android:textColor="#4D4D4D" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notification Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconSystemAlert"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_alert"
                    android:contentDescription="@string/icon_alert"
                    android:layout_marginEnd="16dp"
                    app:tint="#8A2A00" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/notificationTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_text3_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationMessage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_text3"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_time3"
                        android:textSize="12sp"
                        android:textColor="#4D4D4D" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
