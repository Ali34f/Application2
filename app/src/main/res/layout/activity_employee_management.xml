<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".EmployeeManagementActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#D3D3D3"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hradminpro"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/back"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Button Row -->
    <LinearLayout
        android:id="@+id/buttonRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/headerLayout"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <!-- Add Employee Button -->
        <Button
            android:id="@+id/btnAddEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_orange_button"
            android:text="@string/add_employee"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <!-- Sort/Filter Button -->
        <Button
            android:id="@+id/btnSortFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_border_button"
            android:text="@string/sort_filter"
            android:textColor="#FF000000"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_below="@id/buttonRowLayout"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_search_background"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search_icon"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/etSearchEmployee"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/search_employee"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Employee List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBarLayout"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerDrawable="@drawable/separator"
            android:showDividers="middle">

            <!-- Employee Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_employee_image"
                    android:contentDescription="Employee Image"
                    android:background="@drawable/circular_image_background"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmployeeName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emma Watson"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvEmployeePosition1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graphic Designer"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnViewEmployee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_button"
                    android:text="View"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <!-- Employee Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_employee_image2"
                    android:contentDescription="Employee Image"
                    android:background="@drawable/circular_image_background"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmployeeName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvEmployeePosition2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineer"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnViewEmployee2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_button"
                    android:text="View"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <!-- Employee Card 3 -->
