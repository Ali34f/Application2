                    android:text="View"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>
            <!-- Employee Card 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_employee_card"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_employee_image6"
                    android:contentDescription="Employee Image"
                    android:background="@drawable/circular_image_background"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmployeeName6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hamaza Al Biruni"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvEmployeePosition6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Manager"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnViewEmployee6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_button"
                    android:text="View"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
