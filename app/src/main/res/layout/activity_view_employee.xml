<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".ViewEmployeeActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="vertical"
        android:background="#D3D3D3"
        android:padding="16dp">

        <TextView
            android:id="@+id/hrAdminProTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hradminpro"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Back Button Section -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/headerSection"
        android:contentDescription="@string/back" />

    <!-- Employee Information Section -->
    <LinearLayout
        android:id="@+id/employeeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_employee_card"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_below="@id/backButton">

        <!-- Employee Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/employeeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/employee_image_pro"
            android:src="@drawable/ic_profile_pic"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance_MaterialComponents_Circle" />

        <!-- Employee Details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hamza_al_biruni"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/employeePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_software_engineer"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/employeeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_id_number"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/employeeContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_contact_info"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <!-- Salary -->
            <TextView
                android:id="@+id/employeeSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary: $50,000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

            <!-- Start Date -->
            <TextView
                android:id="@+id/employeeStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: 2023-01-15"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Holiday Requests Section -->
    <LinearLayout
        android:id="@+id/holidayRequestSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_gray_background"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_below="@id/employeeSection">

        <TextView
            android:id="@+id/holidayRequestsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/holiday_requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Holiday Request 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/holiday_date_1"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/approveButton1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_orange_button"
                android:text="@string/approve"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/rejectButton1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_button"
                android:text="@string/reject"
                android:textColor="@android:color/black"
                android:textAllCaps="false"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Holiday Request 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/holiday_date_2"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/approveButton2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_orange_button"
                android:text="@string/approve"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/rejectButton2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_button"
                android:text="@string/reject"
                android:textColor="@android:color/black"
                android:textAllCaps="false"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonSection"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@id/holidayRequestSection">

        <Button
            android:id="@+id/editButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_orange_button"
            android:text="@string/edit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/deleteButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_orange_button"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</RelativeLayout>